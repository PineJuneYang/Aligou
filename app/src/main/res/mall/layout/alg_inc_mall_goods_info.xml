<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_360">

        <!--头部商品图片-->
        <ImageView
            android:id="@+id/iv_mall_goods_details_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_22"
            android:layout_marginTop="@dimen/alg_common_45"
            android:src="@drawable/alg_home_commidity_detail_arrow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/alg_common_22"
            android:layout_marginTop="@dimen/alg_common_45"
            android:src="@drawable/alg_common_sharebtnlarge" />
    </RelativeLayout>
    <!--商品名称-->
    <TextView
        android:id="@+id/tv_mall_goods_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:maxLines="2"
        android:lines="2"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:layout_marginRight="@dimen/alg_common_8"
        android:text="宝达家1号系列中性款式方形自动机械腕表，118型号"

        />
    <!--价格-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:layout_marginTop="@dimen/alg_common_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="17sp"
            android:textColor="#ff0000"
            />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_item_padding_top"
            >
            <!--原价-->
            <TextView
                android:id="@+id/tv_mall_goods_details_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="#9f9f9f"/>
            
            <View
                android:layout_width="@dimen/alg_common_60"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:background="#979797"
                />

        </RelativeLayout>

        <!--利购券抵扣-->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alg_common_commidity_detail_ligouquan"

            android:layout_marginLeft="@dimen/alg_common_18"
            />


    </LinearLayout>
    <!--快递-->
    <TextView
        android:id="@+id/tv_mall_goods_details_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:layout_marginTop="@dimen/alg_common_14"
        android:textColor="#4f4f4f"
        android:text="快递:8元"/>
    
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/alg_common_partingline"
      android:layout_marginTop="@dimen/alg_common_8"
      />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alg_common_tip"
            />

        <TextView
            android:id="@+id/tv_mall_goods_details_sold_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_30"
            android:layout_weight="1"
            android:text="已售2764件"/>

        <TextView
            android:id="@+id/tv_mall_goods_details_good_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_weight="1"
            android:text="100%好评率"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alg_common_partingline"
        android:layout_marginTop="@dimen/alg_common_8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_42"
        android:layout_marginTop="@dimen/alg_common_16"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="#8c8c8c"
            android:drawableLeft="@drawable/alg_common_quality_assurance"
            android:drawablePadding="@dimen/alg_common_4"
            android:text="正品保证"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_14"
            android:layout_weight="1"
            android:drawableLeft="@drawable/alg_common_speed"
            android:drawablePadding="@dimen/alg_common_4"
            android:textSize="11sp"
            android:textColor="#8c8c8c"
            android:text="极速送达" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:textSize="11sp"
            android:textColor="#8c8c8c"
            android:drawableLeft="@drawable/alg_common_seven"
            android:drawablePadding="@dimen/alg_common_4"
            android:layout_weight="1"
            android:text="七天退换"/>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alg_common_partingline"
        android:layout_marginTop="@dimen/alg_common_16"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_16"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券"
            android:textSize="12sp"
            android:textColor="#4f4f4f"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_12"
            android:src="@drawable/alg_common_ligouquanpart2"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alg_common_divider_color_dc"
        android:layout_marginTop="@dimen/alg_common_14"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:layout_marginTop="@dimen/alg_common_18"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#4f4f4f"
            android:text="服务"/>

        <TextView
            android:id="@+id/tv_send_commidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4f4f4f"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:drawableRight="@drawable/alg_common_detaillarrow"
            android:drawablePadding="@dimen/alg_common_12"
            android:layout_marginRight="@dimen/alg_common_8"
            android:text="48小时发货"/>

    </RelativeLayout>


</LinearLayout>