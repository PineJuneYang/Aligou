<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/alg_common_8"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_12"
        android:orientation="horizontal">
        <!--用户头像-->
        <ImageView
            android:id="@+id/iv_comment_photo"
            android:layout_width="@dimen/alg_personal_44"
            android:layout_height="@dimen/alg_personal_44"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="用户名"/>

        <TextView
            android:id="@+id/tv_comment_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_gravity="center_vertical"
            android:text="2017-08-02"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_cotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:maxLines="5"
        android:layout_marginTop="@dimen/alg_common_5"
        android:text="评论内容"/>

    <TextView
        android:id="@+id/tv_comment_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="#8a7f7f"
        android:layout_marginTop="@dimen/alg_common_6"
        android:text="规格"/>
    <!--买家晒图-->
    <com.alg.ailigou.common.widget.CustomRecyclerView
        android:id="@+id/rv_mall_goods_details_comment_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alg_common_10"
        android:layout_marginTop="@dimen/alg_common_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/alg_common_11"
        android:background="@color/alg_common_divider_color_dc"/>


</LinearLayout>