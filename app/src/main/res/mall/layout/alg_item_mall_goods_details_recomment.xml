<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/alg_common_5"
    android:layout_marginRight="@dimen/alg_common_5"
    android:layout_marginTop="@dimen/alg_common_10"
    android:background="@color/alg_city_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mall_goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alg_debug_image_yanghe" />

    <TextView
        android:id="@+id/iv_mall_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/alg_common_8"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/alg_common_4"
        android:maxLines="2"
        android:lines="2"
        android:text="某酒名"
        android:textColor="@color/alg_common_3d" />
    <TextView
        android:id="@+id/iv_mall_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_4"
        android:layout_marginTop="@dimen/alg_common_12"
        android:ellipsize="end"
        android:text="￥:2000"

        android:textColor="@color/alg_common_color_red" />

</LinearLayout>