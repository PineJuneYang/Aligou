<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/alg_common_20"
    android:layout_marginLeft="@dimen/alg_common_10"
    android:layout_marginRight="@dimen/alg_common_10"
    android:background="@drawable/alg_home_feature_special_product1"
    android:paddingBottom="@dimen/alg_common_12"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/alg_common_110"
        android:layout_height="@dimen/alg_common_110"
        android:layout_marginLeft="@dimen/alg_common_6"

        android:layout_marginTop="@dimen/alg_common_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/alg_common_12"
        android:layout_marginBottom="@dimen/alg_common_12"
        android:layout_marginTop="@dimen/alg_common_16">

        <TextView
            android:ellipsize="end"
            android:lines="2"
            android:id="@+id/tv_goods_title"
            android:layout_marginRight="@dimen/alg_common_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_12"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:textColor="@color/alg_common_color_red"

            android:text="现价"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_30"
            android:layout_toRightOf="@id/tv_now_price"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/alg_common_2"
            >
            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:textSize="10sp"
                android:textColor="#b5b5b5"
                android:text="原价"/>
            
            <View
                android:layout_width="@dimen/alg_common_35"
                android:layout_height="0.5dp"
                android:background="@color/alg_common_divider_color_dc"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="倒计时 10:32:64"/>

        <TextView
            android:id="@+id/tv_rush_to_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/alg_common_8"
            android:background="@drawable/alg_home_btn_bg"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="马上抢"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>