<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical">

    <!--顶部-->
    <RelativeLayout
        android:id="@+id/rl_goods_info"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <!--顶部背景 商品基本信息-->
        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alg_common_15"
            android:background="@color/alg_common_bg_light"
            android:paddingBottom="@dimen/alg_common_32">
            <!--商品基本信息-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/alg_common_130"
                android:layout_marginStart="131dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mall_details_popup_buy_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/alg_common_10"
                    android:text="商品名称"
                    android:textColor="#474747"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mall_details_popup_buy_goods_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/alg_common_16"
                    android:text="库存:"
                    android:textColor="#474747"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_mall_details_popup_buy_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/alg_common_28"
                    android:text="价格"
                    android:textColor="#ff0000"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_mall_details_popup_buy_goods_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/alg_common_8"
                android:layout_marginTop="@dimen/alg_common_8"
                android:src="@drawable/alg_home_off" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_mall_details_popup_buy_goods_image"
            android:layout_width="@dimen/alg_cart_110"
            android:layout_height="@dimen/alg_cart_110"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_marginRight="20dp"
            android:layout_marginStart="13dp"
            android:src="@mipmap/alg_debug_image_yanghe" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_5"
        android:background="@color/alg_common_divider_color_dc"
        />

    <!--规格-->
    <LinearLayout
        android:id="@+id/ll_goods_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alg_common_bg_light"
        android:orientation="vertical"
        android:paddingBottom="@dimen/alg_common_28"
        android:paddingTop="@dimen/alg_common_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_14"
            android:text="规格"
            android:textColor="#474747"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/ll_add_cart_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alg_common_5"
            android:orientation="horizontal">


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_5"
        android:background="@color/alg_common_divider_color_dc"
        />

    <!--数量-->
    <LinearLayout
        android:id="@+id/ll_goods_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alg_city_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/alg_common_12"
        android:paddingBottom="@dimen/alg_common_60"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"

            android:textSize="11sp"
            android:textColor="#474747"
            android:text="数量"/>

        <LinearLayout
            android:layout_width="@dimen/alg_common_98"
            android:layout_height="@dimen/alg_common_30"
            android:background="@drawable/alg_common_shape_tv_grey"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_marginTop="@dimen/alg_common_11"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/alg_common_10"
                android:src="@drawable/alg_home_minus"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"

                android:background="@color/alg_common_divider_color_ba"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:text="1"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"

                android:background="@color/alg_common_divider_color_ba"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/alg_common_10"
                android:src="@drawable/alg_home_add"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

    <!--确定-->
    <TextView
        android:id="@+id/tv_mall_details_popup_buy_goods_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/alg_common_color_red"
        android:gravity="center"
        android:paddingBottom="@dimen/alg_common_14"
        android:paddingTop="@dimen/alg_common_14"
        android:text="确 定"
        android:textColor="@color/alg_common_text_light"
        android:textSize="@dimen/alg_common_sp_17" />
</LinearLayout>