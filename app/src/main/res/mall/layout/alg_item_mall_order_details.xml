<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/alg_common_10"
              android:layout_marginBottom="@dimen/alg_common_10"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_30"
        android:layout_marginRight="@dimen/alg_common_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="@dimen/alg_common_100"
            android:layout_height="@dimen/alg_common_80"
            android:layout_marginBottom="@dimen/alg_common_15"
            android:layout_marginTop="@dimen/alg_common_15"
            android:background="@drawable/alg_debug_image_yanghe_banner_01"/>

        <TextView
            android:layout_width="@dimen/alg_common_divider_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_marginRight="@dimen/alg_common_10"
            android:background="@color/alg_common_bg_dark"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"/>

            <TextView
                android:id="@+id/tv_goods_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="规格"/>

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="数量"/>

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="价格"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cart_delete"
                    android:layout_width="@dimen/alg_common_15"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_edit_goods_count"
                    android:layout_width="@dimen/alg_common_30"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"/>

                <TextView
                    android:id="@+id/tv_cart_add"
                    android:layout_width="@dimen/alg_common_15"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>