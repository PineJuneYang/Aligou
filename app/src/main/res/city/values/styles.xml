<resources>

    <!-- Base application theme. -->
    <style name="alg_city_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/alg_city_colorPrimary</item>
        <item name="colorPrimaryDark">@color/alg_city_colorPrimaryDark</item>
        <item name="colorAccent">@color/alg_city_colorAccent</item>
    </style>
    <style name="alg_city_HD_NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="alg_city_LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">@dimen/alg_city_side_letter_bar_width</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#979797</item>
    </style>
</resources>
