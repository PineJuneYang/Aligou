<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#fcfbfb"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_my_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabPaddingBottom="@dimen/alg_common_5"
        android:background="@color/alg_common_bg_light"
        android:paddingLeft="@dimen/alg_common_12"
        android:paddingRight="@dimen/alg_common_12"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/alg_news_tab_indoctor"
        app:tabMinWidth="@dimen/alg_common_2"
        app:tabSelectedTextColor="@color/alg_common_37"
        app:tabTextColor="@color/alg_common_37"></android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alg_common_divider_color_ec"

        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_my_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
