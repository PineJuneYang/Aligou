<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_10"
        android:layout_marginTop="@dimen/alg_common_35"
        android:gravity="center_vertical"
        android:text="选择退款方式"
        android:textColor="#7c7c7c"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/rl_only_return_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_60"
        android:layout_marginTop="@dimen/alg_common_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/alg_common_10">

        <ImageView

            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/alg_debug_icon_qq_70_70"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_toRightOf="@id/iv_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅退款"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_5"
                android:text="未收到货(包含未签收),或与商家协商一致退款"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            android:background="@drawable/alg_common_into_arrow"/>
    </RelativeLayout>

    <include layout="@layout/alg_inc_line"></include>

    <RelativeLayout
        android:id="@+id/rl_return_money_and_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_60"
        android:layout_marginTop="@dimen/alg_common_10"
        android:paddingLeft="@dimen/alg_common_10"
        android:paddingRight="@dimen/alg_common_15">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="@dimen/alg_common_40"
            android:layout_height="@dimen/alg_common_40"
            android:layout_centerVertical="true"
            android:background="@drawable/alg_debug_icon_qq_70_70"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_toRightOf="@id/iv_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退货退款"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_5"
                android:text="已收到货,需要退换已收的货物"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            android:background="@drawable/alg_common_into_arrow"/>
    </RelativeLayout>

    <include layout="@layout/alg_inc_line"></include>
</LinearLayout>