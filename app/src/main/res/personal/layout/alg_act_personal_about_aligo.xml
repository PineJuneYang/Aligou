<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_200"
        android:background="@color/alg_city_gray"
        android:visibility="gone"

        >

        <LinearLayout
            android:id="@+id/linear_personal_aboutaligo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_aligo_logo"
                android:layout_width="@dimen/alg_common_40"
                android:layout_height="@dimen/alg_common_40"

                android:src="@drawable/alg_logo" />

            <TextView
                android:id="@+id/tv_aligo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_10"
                android:text="爱利购"

                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱利购·够安全"
            android:layout_below="@id/linear_personal_aboutaligo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/alg_common_shape_rectangle_transparent"
            android:paddingLeft="@dimen/alg_common_15"
            android:paddingRight="@dimen/alg_common_15"
            android:paddingBottom="@dimen/alg_common_5"
            android:paddingTop="@dimen/alg_common_5"
            android:layout_marginTop="@dimen/alg_common_10"
            />
    </RelativeLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_260"
        android:src="@drawable/alg_personal_about_alg_banner"
        />
    

    <RelativeLayout
        android:id="@+id/relative_about_aligo_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给我们评价"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/alg_common_11"
            />
            <ImageView

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alg_personal_intoarrow"
                android:layout_marginRight="@dimen/alg_common_15"
                />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_about_aligo_introduce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱利购介绍"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_11"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alg_personal_intoarrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            />
    </RelativeLayout>
</LinearLayout>