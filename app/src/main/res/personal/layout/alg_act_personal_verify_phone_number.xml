<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_personal_color_f2"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_25"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_25"
            android:drawableLeft="@drawable/alg_personal_verification_1_black"
            android:drawablePadding="@dimen/alg_common_10"
            android:gravity="center_vertical"
            android:text="验证身份"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_25"
            android:drawableLeft="@drawable/alg_personal_verification_2_black"
            android:drawablePadding="@dimen/alg_common_10"
            android:gravity="center_vertical"
            android:text="验证手机号码"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"/>

    </RelativeLayout>

    <include layout="@layout/alg_inc_line"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:layout_marginTop="@dimen/alg_common_25"
        android:background="@color/alg_common_bg_light">

        <TextView
            android:id="@+id/tv_verify_phone_number"
            android:layout_width="@dimen/alg_common_75"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_12"
            android:text="新手机号"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"

            />


        <EditText
            android:id="@+id/et_verify_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:maxLength="12"
            android:layout_toRightOf="@id/tv_verify_phone_number"
            android:background="@null"
            android:hint="请输入新手机号码"
            android:textColorHint="@color/alg_common_divider_hint_d1"
            android:textSize="@dimen/alg_common_sp_14"
            />


    </RelativeLayout>

    <include layout="@layout/alg_inc_line"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:layout_marginTop="@dimen/alg_common_25"
        android:background="@color/alg_common_bg_light">

        <TextView
            android:id="@+id/tv_modify_phone_number_verification_code"
            android:layout_width="@dimen/alg_common_75"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_12"
            android:text="验证码"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"

            />


        <EditText
            android:id="@+id/et_verify_phone_number_input_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_modify_phone_number_verification_code"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/alg_common_divider_hint_d1"
            android:textSize="@dimen/alg_common_sp_14"
            />

        <TextView
            android:id="@+id/tv_verify_phone_number_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/alg_common_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            android:background="@drawable/alg_common_shape_rectangle_transparent"
            android:gravity="center"
            android:paddingLeft="@dimen/alg_common_6"
            android:paddingRight="@dimen/alg_common_6"
            android:text="获取验证码"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="13sp"
            />

    </RelativeLayout>

    <include layout="@layout/alg_inc_line"></include>

    <TextView
        android:id="@+id/tv_verify_phone_number_sure"
        android:layout_width="@dimen/alg_common_200"
        android:layout_height="@dimen/alg_common_35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/alg_common_40"
        android:background="@drawable/alg_personal_nextbtn"
        android:gravity="center"
        android:text="确 定"
        android:textColor="@color/alg_common_bg_light"
        android:textSize="@dimen/alg_common_sp_14"
        />


</LinearLayout>