<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <LinearLayout
        android:id="@+id/ll_ali_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_40"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/alg_common_10"
        android:paddingRight="@dimen/alg_common_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="选择一种付款方式"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="应付款 ￥256"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_60"
        android:layout_marginLeft="@dimen/alg_common_20"
        android:layout_marginRight="@dimen/alg_common_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/alg_common_40"
            android:layout_height="@dimen/alg_common_40"
            android:background="@color/alg_common_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_weight="1"
            android:text="支付宝"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alg_personal_mylist_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weixin_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_60"
        android:layout_marginLeft="@dimen/alg_common_20"
        android:layout_marginRight="@dimen/alg_common_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/alg_common_40"
            android:layout_height="@dimen/alg_common_40"
            android:background="@color/alg_common_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_weight="1"
            android:text="微信"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alg_personal_mylist_arrow"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <!--待付款-->
    <LinearLayout
        android:id="@+id/ll_wait_pay_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:layout_alignParentBottom="true"
        android:background="@color/alg_common_bg_light"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_wait_pay_money_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/alg_common_15"
            />

        <TextView
            android:id="@+id/tv_wait_pay_money"
            android:layout_width="@dimen/alg_common_100"
            android:layout_height="match_parent"
            android:background="@color/alg_common_bg"
            android:gravity="center"
            android:text="确定支付"/>
    </LinearLayout>
</LinearLayout>