<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/alg_common_bg_light"
        android:paddingRight="@dimen/alg_common_margin"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_60"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_margin"
                android:layout_marginRight="@dimen/alg_common_8"
                android:text="兑换时间"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_time_begin"
                style="@style/alg_home_ligou_change_time_text"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_10"
                android:layout_marginRight="@dimen/alg_common_10"
                android:text="至"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_time_end"
                style="@style/alg_home_ligou_change_time_text"
                />


        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/alg_common_8"
            android:layout_marginRight="@dimen/alg_common_8"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/alg_common_divider_color"/>

        <LinearLayout

            android:background="@color/alg_common_bg_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_60"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/alg_common_margin"
                android:paddingRight="@dimen/alg_common_8"
                android:text="处理状态:"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_state"
                style="@style/alg_home_ligou_change_time_text_75"
                />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/alg_common_75"
                android:layout_height="@dimen/alg_common_25"
                android:layout_marginLeft="@dimen/alg_common_10"
                android:layout_marginRight="@dimen/alg_common_7"
                android:background="@drawable/alg_personal_quire_btn"
                android:gravity="center"
                android:text="查 询"
                android:textColor="#ffffff"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/alg_common_bg_light"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/alg_common_5"
        android:layout_height="@dimen/alg_common_50">

        <TextView
            android:id="@+id/tv1"
            android:textSize="13sp"
            android:textColor="#181818"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品信息"/>

        <TextView
            android:id="@+id/tv2"
            android:textSize="13sp"
            android:textColor="#181818"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="金额"/>

        <TextView
            android:id="@+id/tv3"
            android:textSize="13sp"
            android:textColor="#181818"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单协议"/>

        <TextView
            android:textSize="13sp"
            android:textColor="#181818"
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/alg_common_5"
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>