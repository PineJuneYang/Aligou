<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_15"
        android:layout_marginTop="@dimen/alg_common_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_receive_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王思聪"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_13" />


        <TextView
            android:id="@+id/tv_item_receive_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:text="18000000000"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_receive_address_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_15"
        android:layout_marginTop="@dimen/alg_common_10"
        android:text="上海市浦东新区浦南路"
        android:textSize="@dimen/alg_common_sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/alg_common_10"
        android:background="#88888888"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_10">

        <TextView
            android:id="@+id/tv_item_receive_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:drawableLeft="@drawable/alg_cart_choose"
            android:drawablePadding="@dimen/alg_common_8"
            android:text="默认地址"
            android:textSize="@dimen/alg_common_sp_13"

            />


        <TextView
            android:id="@+id/tv_item_receive_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_marginRight="@dimen/alg_common_15"
            android:drawableLeft="@drawable/alg_cart_icon_hot"
            android:drawablePadding="@dimen/alg_common_8"

            android:text="删除"
            android:textSize="@dimen/alg_common_sp_13" />


        <TextView
            android:id="@+id/tv_item_receive_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_toLeftOf="@id/tv_item_receive_address_delete"
            android:drawableLeft="@drawable/alg_cart_icon_hot"
            android:drawablePadding="@dimen/alg_common_8"
            android:textSize="@dimen/alg_common_sp_13"
            android:layout_centerVertical="true"

            />

    </RelativeLayout>


</LinearLayout>