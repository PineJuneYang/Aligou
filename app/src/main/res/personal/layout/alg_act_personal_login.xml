<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_common_bg_light"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/alg_common_30"
        android:background="@drawable/alg_personal_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/alg_common_20"
        android:layout_marginRight="@dimen/alg_common_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_50"
            android:singleLine="true"
            android:layout_marginTop="@dimen/alg_common_10"
            android:maxLength="16"
            android:background="@android:color/transparent"
            android:hint="用户名/手机号"
            android:textColorHint="@color/alg_common_divider_color_7c"
            android:textSize="@dimen/alg_common_sp_14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_divider_width"
            android:layout_marginTop="@dimen/alg_common_5"
            android:background="@color/alg_common_divider_color_dc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/alg_common_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/alg_common_50"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="@color/alg_common_divider_color_7c"
                android:textSize="@dimen/alg_common_sp_14"/>

            <ImageView
                android:id="@+id/iv_see_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alg_personal_login_look_psw"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_divider_width"

            android:layout_marginTop="@dimen/alg_common_5"
            android:background="@color/alg_common_divider_color_dc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alg_common_10"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/alg_common_10"
                android:paddingLeft="@dimen/alg_common_10"
                android:paddingTop="@dimen/alg_common_10"
                android:text="忘记密码？"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_40"
            android:layout_marginTop="@dimen/alg_common_40"
            android:background="@drawable/alg_personal_login"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#ffffff"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/alg_common_25"
            android:layout_marginTop="@dimen/alg_common_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/alg_common_divider_width"
                android:layout_weight="1"
                android:background="@color/alg_common_divider_color_dc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/alg_common_25"
                android:paddingRight="@dimen/alg_common_25"
                android:text="O R"
                android:textColor="@color/alg_common_bg_dark"
                android:textSize="@dimen/alg_common_sp_12"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/alg_common_divider_width"
                android:layout_weight="1"
                android:background="@color/alg_common_divider_color_dc"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_wecaht"
                style="@style/alg_common_dialog_um_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alg_personal_weixin"/>

                <TextView
                    style="@style/alg_common_dialog_um_text"
                    android:text="微信"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq"
                style="@style/alg_common_dialog_um_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alg_personal_qq"/>

                <TextView
                    style="@style/alg_common_dialog_um_text"
                    android:text="QQ"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weibo"
                style="@style/alg_common_dialog_um_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alg_personal_weibo"/>

                <TextView
                    style="@style/alg_common_dialog_um_text"
                    android:text="微博"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>