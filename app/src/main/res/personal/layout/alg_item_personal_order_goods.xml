<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/alg_common_20"
              android:layout_marginLeft="@dimen/alg_common_margin"
              android:layout_marginRight="@dimen/alg_common_margin"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/alg_cart_93.5"
        android:layout_height="@dimen/alg_cart_93.5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_goods_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginTop="@dimen/alg_common_10"
            android:text="规格"
            android:textColor="#5d5d5d"
            android:textSize="11sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="价格:280"
                android:textColor="#ee3929"
                android:textSize="17sp"/>

            <TextView
                android:textColor="#ee3929"
                android:textSize="17sp"
                android:id="@+id/tv_ligou_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="利购券:290"/>
        </LinearLayout>

        <TextView
            android:textSize="12sp"
            android:textColor="#5d5d5d"
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="x 1"/>
    </RelativeLayout>


</LinearLayout>