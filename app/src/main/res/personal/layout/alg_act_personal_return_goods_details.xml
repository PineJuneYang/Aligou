<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_personal_color_f2"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <TextView
        style="@style/alg_item_personal_return_goods_details_tv_left"
        android:layout_marginBottom="@dimen/alg_common_10"
        android:layout_marginTop="@dimen/alg_common_25"
        android:text="退款详情"
        android:textSize="14sp"
        />

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="退款编号"
            />

        <TextView
            android:id="@+id/tv_return_goods_number"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="110220330440"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="申请时间"
            />

        <TextView
            android:id="@+id/tv_apply_time"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="2017-10-01"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="申请原因"
            />

        <TextView
            android:id="@+id/tv_return_goods_reason"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="七天无理由退换货"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="瑞款说明"
            />

        <TextView
            android:id="@+id/tv_return_goods_desc"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="---"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="退款类型"
            />

        <TextView
            android:id="@+id/tv_return_goods_type"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="商品退货退款"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="退款时间"
            />

        <TextView
            android:id="@+id/tv_return_goods_time"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="2017-10-02"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        style="@style/alg_item_personal_return_goods_details_ll"
        >

        <TextView
            style="@style/alg_item_personal_return_goods_details_tv_left"
            android:text="退款金额"
            />

        <TextView
            android:id="@+id/tv_return_goods_money"
            style="@style/alg_item_personal_return_goods_details_tv_right"
            android:text="￥ 188.00"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>
</LinearLayout>