<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <RelativeLayout
        android:layout_marginTop="@dimen/alg_common_25"
        android:id="@+id/relative_my_info_avatar"
        style="@style/alg_personal_my_info_rl"
        >

        <TextView
            style="@style/alg_personal_my_info_text"
            android:text="头像"
            />

        <ImageView
            android:id="@+id/iv_my_info_avatar"
            style="@style/alg_personal_my_info_arrow_img"/>


        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/alg_common_40"
            android:layout_height="@dimen/alg_common_40"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            android:layout_toLeftOf="@id/iv_my_info_avatar"
            />

    </RelativeLayout>

    <View
        style="@style/alg_personal_my_info_line"
        />

    <RelativeLayout
        android:id="@+id/relative_my_info_username"
        style="@style/alg_personal_my_info_rl">

        <TextView
            style="@style/alg_personal_my_info_text"
            android:text="用户名"
            />

        <TextView
            android:id="@+id/iv_my_info_username"
            style="@style/alg_personal_my_info_text"
            android:layout_alignParentRight="true"
            android:text=""
            />


    </RelativeLayout>

    <View
        style="@style/alg_personal_my_info_line"
        />


    <RelativeLayout
        android:id="@+id/relative_my_info_sex"
        style="@style/alg_personal_my_info_rl">

        <TextView
            style="@style/alg_personal_my_info_text"
            android:text="性别"

            />

        <TextView
            android:id="@+id/iv_my_info_sex"
            style="@style/alg_personal_my_info_text"
            android:layout_alignParentRight="true"
            android:text="男"
            />


    </RelativeLayout>

    <View
        style="@style/alg_personal_my_info_line"
        />


    <RelativeLayout
        android:id="@+id/relative_my_info_qrcode"
        style="@style/alg_personal_my_info_rl">

        <TextView
            style="@style/alg_personal_my_info_text"
            android:text="我的二维码"

            />


        <ImageView
            android:id="@+id/iv_my_info_qrcode"
            style="@style/alg_personal_my_info_arrow_img"/>

    </RelativeLayout>

    <View
        style="@style/alg_personal_my_info_line"
        />

</LinearLayout>