<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_personal_color_f2"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海吴奇隆"/>

        <RelativeLayout
            android:background="@drawable/alg_personal_qr_code"
            android:layout_width="@dimen/alg_common_200"
            android:layout_height="@dimen/alg_common_200"
            android:layout_marginTop="@dimen/alg_common_40">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_qr_code"
                android:layout_width="@dimen/alg_common_180"
                android:layout_height="@dimen/alg_common_180"/>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/alg_common_40"
                android:layout_height="@dimen/alg_common_40"
                android:layout_centerInParent="true"
               />


        </RelativeLayout>

        <TextView
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alg_common_35"
            android:text="商户扫一扫二维码,确认账单"/>
    </LinearLayout>

</LinearLayout>