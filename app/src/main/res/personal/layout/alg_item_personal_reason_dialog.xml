<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_35"
        android:layout_marginLeft="@dimen/alg_common_15"
        android:layout_marginRight="@dimen/alg_common_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不想要了"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="@dimen/alg_common_20"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alg_cart_choose"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_divider_width"
        android:background="@color/alg_common_bg_gray"/>
</LinearLayout>