<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_25"
            android:drawableLeft="@drawable/alg_personal_verification_1_black"
            android:drawablePadding="@dimen/alg_common_10"
            android:gravity="center_vertical"
            android:text="验证身份"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_25"
            android:drawableLeft="@drawable/alg_personal_verification_2_grey"
            android:drawablePadding="@dimen/alg_common_10"
            android:gravity="center_vertical"
            android:text="验证手机号码"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_modify_phone_number_current_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_12"
        android:layout_marginTop="@dimen/alg_common_25"
        android:layout_marginBottom="@dimen/alg_common_15"
        android:text="当前手机号码150****1234"
        android:textColor="#7c7c7c"
        android:textSize="14sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_60"
        android:background="@color/alg_common_bg_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_modify_phone_number_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_12"
            android:text="验证码"
            android:textColor="@color/alg_common_bg_dark"
            android:textSize="@dimen/alg_common_sp_14"
            />


        <EditText
            android:id="@+id/et_modify_phone_number_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_toRightOf="@id/tv_modify_phone_number_verification_code"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/alg_common_divider_hint_d1"
            android:textSize="@dimen/alg_common_sp_14"
            />

        <TextView
            android:id="@+id/tv_modify_phone_number_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/alg_common_25"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alg_common_15"
            android:background="@drawable/alg_common_shape_rectangle_transparent"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/alg_common_8"
            android:paddingRight="@dimen/alg_common_8"
            android:text="获取验证码"
            />
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <TextView
        android:layout_marginTop="@dimen/alg_common_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_15"
        android:text="如果你的原手机已停止使用,请联系客服:400-806-2001"
        android:textColor="#adadad"
        android:textSize="@dimen/alg_common_sp_12"
        />


    <TextView
        android:id="@+id/tv_modify_phone_number_next"
        style="@style/alg_personal_common_next_tv"
        android:layout_marginTop="@dimen/alg_common_80"
        android:text="下一步"
        />

</LinearLayout>