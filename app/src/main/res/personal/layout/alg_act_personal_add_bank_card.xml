<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <LinearLayout
        android:layout_marginLeft="@dimen/alg_common_7"
        android:layout_marginRight="@dimen/alg_common_7"
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_35"
        android:gravity="center"
        android:background="@drawable/alg_personal_addcard_bgcard"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/alg_common_40"
            android:layout_height="@dimen/alg_common_40"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:background="@drawable/alg_personal_bank_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/alg_common_25"
            android:text="添加银行卡"/>
    </LinearLayout>
</LinearLayout>