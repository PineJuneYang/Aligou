<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_personal_color_f2"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_25"
        android:paddingLeft="@dimen/alg_common_10"
        android:text="退款详情"
        android:textColor="#7c7c7c"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/alg_common_10"
        android:paddingRight="@dimen/alg_common_15">

        <TextView
            android:id="@+id/tv_return_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退款原因"
            android:textColor="#7c7c7c"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/alg_common_icon_arrow_right"/>
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:background="@color/alg_common_bg_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:text="退款金额"
            android:textColor="#7c7c7c"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_return_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:background="@color/alg_common_transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text=""
            android:textColor="#030303"
            android:textSize="14sp"/>
    </LinearLayout>

    <include layout="@layout/alg_inc_line"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/alg_common_12"
        android:paddingLeft="@dimen/alg_common_10"
        android:paddingTop="@dimen/alg_common_12"
        android:text="退款金额包含运费8块"
        android:textColor="#7c7c7c"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alg_common_bg_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_return_desc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/alg_common_50"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/alg_common_10"
            android:text="退款说明"
            android:textColor="#7c7c7c"/>

        <EditText
            android:id="@+id/et_return_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:background="@color/alg_common_transparent"
            android:maxLength="300"
            android:paddingRight="@dimen/alg_common_15"
            android:textColor="#7c7c7c"
            android:textSize="@dimen/alg_common_sp_14"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/alg_common_10"
        android:paddingTop="@dimen/alg_common_18"
        android:text="上传凭证"
        android:textColor="#7c7c7c"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_40"
        android:layout_marginBottom="@dimen/alg_common_60"
        android:background="@drawable/alg_personal_comment_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/alg_common_bg_light"
        android:textSize="14sp"
        />
</LinearLayout>