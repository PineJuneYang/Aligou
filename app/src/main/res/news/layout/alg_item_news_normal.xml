<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alg_common_15"
        android:layout_marginLeft="@dimen/alg_common_8"
        android:layout_marginRight="@dimen/alg_common_8"
        android:layout_marginTop="@dimen/alg_common_15">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="@dimen/alg_news_130"
            android:layout_height="@dimen/alg_news_105"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_news_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_marginTop="@dimen/alg_common_12"
            android:layout_toRightOf="@+id/iv_news"
            android:text="新闻描述"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_toRightOf="@+id/iv_news"
            android:text="时间"/>
    </RelativeLayout>

</LinearLayout>