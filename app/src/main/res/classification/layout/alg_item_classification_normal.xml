<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/alg_common_item_padding_top">

    <ImageView
        android:id="@+id/iv_hot_image"
        android:layout_width="@dimen/alg_common_72"
        android:layout_height="@dimen/alg_common_72"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alg_debug_image_yanghe"/>

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/alg_city_gray"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:maxLines="2"
        android:text="商品"/>
</LinearLayout>