<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/alg_main_tab_padding_top"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/alg_main_tab_selector_classification" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@drawable/alg_main_tab_selector_text"
        android:textSize="@dimen/alg_main_tab_title_size"
        android:text="@string/alg_main_tab_title_classification"
        android:gravity="center_horizontal"/>
</LinearLayout>