<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/alg_common_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--底部页面模块-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_main_pages"
        android:layout_width="match_parent"
        android:background="@color/alg_main_tab_bg"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@color/alg_common_text_gray"
        app:tabSelectedTextColor="@color/alg_common_text_light"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true" />

    <!--页面展示区-->
    <com.alg.ailigou.library.widget.CustomViewPager
        android:id="@+id/vp_main_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_main_pages" />

</RelativeLayout>
