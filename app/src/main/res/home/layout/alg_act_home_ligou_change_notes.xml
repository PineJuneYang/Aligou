<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alg_common_bg_light"
              android:orientation="vertical">

    <include layout="@layout/alg_inc_common_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/alg_common_margin"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_60"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_margin"
                android:layout_marginRight="@dimen/alg_common_8"
                android:text="兑换时间"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_time_begin"
                style="@style/alg_home_ligou_change_time_text"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_10"
                android:layout_marginRight="@dimen/alg_common_10"
                android:text="至"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_time_end"
                style="@style/alg_home_ligou_change_time_text"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/alg_common_8"
            android:layout_marginRight="@dimen/alg_common_8"
            android:background="@color/alg_common_divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_60"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alg_common_margin"
                android:layout_marginRight="@dimen/alg_common_8"
                android:text="处理状态:"
                android:textColor="#505050"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_state"
                style="@style/alg_home_ligou_change_time_text_75"
                />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/alg_common_75"
                android:layout_height="@dimen/alg_common_25"
                android:layout_marginLeft="@dimen/alg_common_10"
                android:layout_marginRight="@dimen/alg_common_7"
                android:background="@drawable/alg_personal_quire_btn"
                android:gravity="center"
                android:text="查 询"
                android:textColor="#ffffff"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="兑换时间"
            android:textColor="#181818"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单号"
            android:textColor="#181818"
            android:textSize="13sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="面值"
            android:textColor="#181818"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="详情"
            android:textColor="#181818"
            android:textSize="13sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />

</LinearLayout>