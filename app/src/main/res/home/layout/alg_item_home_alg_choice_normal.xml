<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_200"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_marginTop="@dimen/alg_common_10"
            android:text="品牌名"/>

        <TextView
            android:id="@+id/tv_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_brand_name"
            android:layout_marginBottom="@dimen/alg_common_10"
            android:layout_marginLeft="@dimen/alg_common_15"
            android:layout_marginTop="@dimen/alg_common_10"
            android:text="方案"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_brand_name"
            android:layout_marginBottom="@dimen/alg_common_10"
            android:layout_marginRight="@dimen/alg_common_15"
            android:layout_marginTop="@dimen/alg_common_10"
            android:text="倒计时"/>
    </RelativeLayout>
</LinearLayout>