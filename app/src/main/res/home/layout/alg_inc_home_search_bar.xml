<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_home_top_bar_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/alg_common_bg"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingTop="5dp">

    <!--定位-->
    <TextView
        android:id="@+id/tv_home_top_bar_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="3dp"
        android:text="上海"
        android:textColor="@color/alg_common_text_light"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_home_location_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="3dp"
        android:src="@mipmap/alg_common_icon_arrow_down"/>
    <!--搜索-->
    <LinearLayout
        android:id="@+id/ll_search_bar_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/alg_main_shp_bg_round_no_border">

        <ImageView
            android:id="@+id/iv_home_top_bar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/alg_home_icon_top_bar_search"/>
    </LinearLayout>
    <!--活动通知-->
    <ImageView
        android:id="@+id/iv_home_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:src="@mipmap/alg_home_icon_notice"/>

</LinearLayout>