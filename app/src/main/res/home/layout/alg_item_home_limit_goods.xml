<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="12dp"
              android:layout_marginLeft="4dp"

              android:layout_marginRight="4dp"
    android:background="@drawable/alg_home_limite_product"
              android:orientation="vertical">
    <!--商品图片-->
    <ImageView
        android:id="@+id/iv_home_limit_goods_image"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alg_debug_image_yanghe"
        style="@style/alg_home_limit_buy_88_77_img"
        />
    <!--商品标题-->
    <TextView
        android:id="@+id/tv_home_limit_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="商品标题"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--价格-->
        <TextView
            android:id="@+id/tv_home_limit_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00元"
            android:layout_marginTop="@dimen/alg_common_7"
            android:textColor="@color/alg_home_d51818"
            android:letterSpacing="0.08"
            android:lineSpacingExtra="1.5sp"
            android:textSize="@dimen/alg_common_sp_14"/>
        <!--原价-->
        <TextView
            android:id="@+id/tv_home_limit_goods_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alg_common_7"
            android:text="原价:120.00元"
            android:textColor="@color/alg_home_b9b9b9"
            android:textSize="@dimen/alg_common_sp_12"/>
    </LinearLayout>

</LinearLayout>