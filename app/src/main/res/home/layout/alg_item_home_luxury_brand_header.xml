<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_250">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alg_cart_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alg_common_120"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/alg_common_10"
            android:layout_marginRight="@dimen/alg_common_10"
            android:background="@color/alg_cart_hot_recommend_text"
            android:orientation="vertical">
            <!--上面2个 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/alg_common_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_goods1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/alg_common_5"
                    android:layout_marginRight="@dimen/alg_common_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_goods1"
                        style="@style/alg_home_alg_luxury_title_img"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_top_1"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="标题"/>

                        <TextView
                            style="@style/alg_home_alg_luxury_title_line"
                            />

                        <TextView
                            android:id="@+id/tv_goods_bottom_1"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="文案"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_goods2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/alg_common_5"
                    android:layout_marginRight="@dimen/alg_common_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_goods2"
                        style="@style/alg_home_alg_luxury_title_img"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_top_2"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="标题"/>

                        <TextView
                            style="@style/alg_home_alg_luxury_title_line"
                            />

                        <TextView
                            android:id="@+id/tv_goods_bottom_2"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="文案"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--下面2个 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/alg_common_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_goods3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/alg_common_5"
                    android:layout_marginRight="@dimen/alg_common_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_goods3"
