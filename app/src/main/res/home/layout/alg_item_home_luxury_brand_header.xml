                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_top_4"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="标题"/>

                        <TextView
                            style="@style/alg_home_alg_luxury_title_line"
                            />

                        <TextView
                            android:id="@+id/tv_goods_bottom_4"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="文案"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--精品推荐 -->
    <include layout="@layout/alg_inc_common_recommend"></include>

    <LinearLayout
