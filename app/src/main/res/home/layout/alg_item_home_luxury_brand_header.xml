                        <TextView
                            style="@style/alg_home_alg_luxury_title_line"
                            />

                        <TextView
                            android:id="@+id/tv_goods_bottom_3"
                            style="@style/alg_home_alg_luxury_title_text_top"
                            android:text="文案"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_goods4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/alg_common_5"
                    android:layout_marginRight="@dimen/alg_common_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_goods4"
                        style="@style/alg_home_alg_luxury_title_img"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
