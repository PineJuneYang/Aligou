    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alg_common_20"
        android:layout_marginTop="@dimen/alg_common_10"
        android:drawableLeft="@drawable/alg_cart_choose"
        android:drawablePadding="@dimen/alg_common_5"
        android:text="热门搜索" />


    <com.alg.ailigou.pages.home.widget.YhFlowLayout
        android:id="@+id/flowLayoutItem"
        android:layout_width="match_parent"
