<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/alg_common_166"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_cheap_ticket_overage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/alg_common_5"
            android:layout_marginRight="@dimen/alg_common_3"
            android:layout_weight="1"
            android:background="@drawable/alg_ligou_paper_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cheap_ticket_overage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_26"
                android:text="60"
                android:textColor="#444444"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/alg_common_24"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="@string/alg_home_cheap_ticket_overage"
                android:textColor="#444444"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exchange_notes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/alg_ligou_paper_bg"
            android:layout_marginRight="@dimen/alg_common_5"
            android:layout_marginLeft="@dimen/alg_common_3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_exchange_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_26"
                android:text="60"
                android:textColor="#444444"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alg_common_10"
                android:text="@string/alg_home_exchange_notes"
                android:layout_marginBottom="@dimen/alg_common_24"
                android:textColor="#444444"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/alg_common_10"
        android:paddingLeft="@dimen/alg_common_4"
        android:paddingTop="@dimen/alg_common_10"
        android:textSize="12sp"
        android:textColor="#444444"
        android:text="@string/alg_home_exchange_goods" />
</LinearLayout>
