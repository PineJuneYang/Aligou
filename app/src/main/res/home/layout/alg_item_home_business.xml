<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/alg_common_item_padding_top"
              android:layout_marginRight="@dimen/alg_common_item_padding_top"
              android:layout_marginBottom="@dimen/alg_common_item_padding_top"
              android:background="@mipmap/alg_home_image_business_item_bg"
              android:orientation="vertical">
    <!--商户图片-->
    <ImageView
        android:id="@+id/iv_home_business_image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        android:src="@mipmap/alg_debug_image_yanghe_banner_01"/>
    <!--商户名称-->
    <TextView
        android:id="@+id/tv_home_business_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/alg_common_item_padding_top"
        android:text="商户名称"
        android:textColor="@color/alg_common_text_dark"
        android:textSize="@dimen/alg_common_text_discribe_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="@dimen/alg_common_20"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_home_business_detail"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/alg_common_10"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/alg_common_4"
                android:orientation="horizontal">
                <!--联系人姓名-->
                <TextView
                    android:id="@+id/tv_home_business_contacts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人:张XX"
                    android:textColor="@color/alg_common_text_dark"
                    android:textSize="@dimen/alg_common_text_discribe_small"/>


                <!--联系人电话-->
                <TextView
                    android:id="@+id/tv_home_business_contacts_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="Tel:13999999999"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/alg_common_text_dark"
                    android:textSize="@dimen/alg_common_text_discribe_small"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/alg_common_6"
                android:background="#f7f7f7"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/alg_common_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--商户地址-->
                <TextView
                    android:id="@+id/tv_home_business_address"
                    android:layout_width="@dimen/alg_common_225"
                    android:layout_height="wrap_content"


                    android:text="商店地址：上海市闵行区沈杜公路4852号201室"
                    android:textColor="@color/alg_common_text_dark"
                    android:singleLine="true"

                    android:textSize="@dimen/alg_common_text_discribe_small"/>
                <!--进入店铺-->
                <TextView
                    android:id="@+id/tv_home_into_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_home_business_address"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="@dimen/alg_personal_44"
                    android:paddingRight="15dp"
                    android:textColor="@color/alg_common_bg_light"
                    android:background="@drawable/alg_common_shape_button_bg_normal"
                    android:text="进入店铺"/>
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>