<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="@drawable/alg_home_new_producet_bg"
                android:layout_marginTop="@dimen/alg_common_15"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/alg_common_100"
        android:layout_height="@dimen/alg_common_100"
        android:background="@drawable/alg_debug_image_yanghe_banner_02"
        android:scaleType="centerCrop"/>



    <TextView
        android:id="@+id/tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_4"
        android:visibility="gone"
        android:text="new"/>

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_32"
        android:textSize="10sp"
        android:textColor="#000000"
        android:text="商品名称简称"/>

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#fb291e"
        android:layout_marginTop="@dimen/alg_common_6"
        android:text="$999"/>
</LinearLayout>