<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_function_icon"
        android:layout_width="@dimen/alg_common_40"
        android:layout_height="@dimen/alg_common_40"
        android:layout_marginTop="@dimen/alg_common_12"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alg_home_icon_function_mall" />

    <TextView
        android:id="@+id/tv_home_function_title"
        android:layout_marginTop="@dimen/alg_common_8"
        android:layout_width="wrap_content"
        android:textColor="@color/alg_common_text_dark"
        android:textSize="@dimen/alg_common_sp_12"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:letterSpacing="0.01"
        android:text="功能" />
</LinearLayout>