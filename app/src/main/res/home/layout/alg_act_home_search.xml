<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--顶部搜索条-->
    <include layout="@layout/alg_inc_common_search_bar"></include>



    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_home_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_35"
        android:layout_marginLeft="@dimen/alg_common_1"
        android:layout_marginRight="@dimen/alg_common_1"
        android:background="@color/alg_common_bg_light"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/alg_news_tab_indoctor"
        app:tabMinWidth="@dimen/alg_common_2"
        app:tabSelectedTextColor="@color/alg_common_bg"
        app:tabTextColor="@color/alg_common_bg_dark"></android.support.design.widget.TabLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/alg_home_navigation_shadow"

    />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_hot_search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alg_common_text_gray_transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>