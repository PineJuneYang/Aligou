<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:padding="@dimen/alg_common_item_padding_top"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_discount_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/alg_debug_image_yanghe"/>

    <TextView
        android:id="@+id/tv_home_discount_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/alg_common_item_padding_top"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_gravity="center_horizontal"
        android:text="商品名称简写"/>
</LinearLayout>