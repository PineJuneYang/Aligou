<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/alg_common_item_padding_top"
              android:paddingTop="@dimen/alg_common_item_padding_top">
    <!--商品图片-->
    <ImageView
        android:id="@+id/iv_home_self_month_action_commodity_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@mipmap/alg_debug_image_yanghe_banner_01"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_item_padding_top">
        <!--价格-->
        <TextView
            android:id="@+id/tv_home_self_month_action_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="价格"/>
        <!--抢购按钮-->
        <TextView
            android:id="@+id/tv_home_self_month_action_commodity_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="抢购"/>

    </RelativeLayout>

</LinearLayout>