<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.alg.ailigou.library.widget.banner.BannerViewPager
        android:id="@id/bannerview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alg_common_205">
    </com.alg.ailigou.library.widget.banner.BannerViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alg_common_10"
        android:layout_marginTop="@dimen/alg_common_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_self_head_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_self_head_title_1"
                style="@style/alg_home_self_img"
                android:background="@mipmap/alg_home_self_icon_hot" />

            <TextView
                android:id="@+id/tv_self_head_title_1"
                style="@style/alg_home_self_head_text"
                android:text="热销榜" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_self_head_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_self_head_title_2"
                style="@style/alg_home_self_img"
                android:background="@mipmap/alg_home_self_icon_new" />

            <TextView
                android:id="@+id/tv_self_head_title_2"
                style="@style/alg_home_self_head_text"
                android:text="本周上新" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_self_head_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_self_head_title_3"
                style="@style/alg_home_self_img"
                android:background="@mipmap/alg_home_self_icon_special_offer" />

            <TextView

                android:id="@+id/tv_self_head_title_3"
                style="@style/alg_home_self_head_text"
                android:text="爆款特惠" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_self_head_title_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_self_head_title_4"
                style="@style/alg_home_self_img"
                android:background="@mipmap/alg_home_self_icon_theexplosion" />

            <TextView
                android:id="@+id/tv_self_head_title_4"
                style="@style/alg_home_self_head_text"
                android:text="精选特价" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_10"
        android:background="@color/alg_common_text_gray_transparent"
        android:layout_marginTop="@dimen/alg_common_20"
        />

    <ImageView
        android:id="@id/iv_banner"
        android:layout_width="match_parent"
        android:scaleType="center"
        android:layout_height="@dimen/alg_common_175"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_10"
        android:background="@color/alg_common_text_gray_transparent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alg_common_24"
        android:textSize="@dimen/alg_common_sp_15"
        android:textColor="#c51212"

        android:text="人气推荐"/>

    <ImageView
        android:layout_width="102dp"
        android:layout_height="@dimen/alg_common_4"
        android:layout_marginTop="@dimen/alg_common_2"
        android:layout_marginBottom="@dimen/alg_common_16"
        android:src="@mipmap/alg_home_image_recommend"/>

</LinearLayout>