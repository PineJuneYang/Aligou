<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!-- 样式如下         ===为您推荐====                   -->
    <LinearLayout
        android:id="@+id/ll_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/alg_common_divider_width"
            android:layout_marginLeft="@dimen/alg_common_30"
            android:layout_marginRight="@dimen/alg_common_20"
            android:layout_weight="1"
            android:background="@color/alg_common_text_gray"/>

        <TextView
            android:id="@+id/tv_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/alg_common_12"
            android:text="精品推荐"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/alg_common_divider_width"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_marginRight="@dimen/alg_common_30"
            android:layout_weight="1"
            android:background="@color/alg_common_text_gray"/>
    </LinearLayout>
</LinearLayout>