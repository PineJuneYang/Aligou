<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/alg_city_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/alg_common_200" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alg_home_icon_boutiquerecommendation"
        android:layout_marginTop="@dimen/alg_common_30"
        android:layout_marginBottom="@dimen/alg_common_16"
        />




</LinearLayout>