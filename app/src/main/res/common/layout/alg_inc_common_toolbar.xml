<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/alg_common_bg"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--返回按钮-->
            <ImageView
                android:id="@+id/iv_common_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/alg_common_item_padding_top"
                android:scaleType="center"/>
            <!--标题-->
            <TextView
                android:id="@+id/tv_common_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="标题"
                android:textColor="@color/alg_common_text_light"
                android:textSize="@dimen/alg_common_text_title"/>
            <!--右边按钮-->
            <ImageView
                android:id="@+id/iv_common_toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>