<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/alg_common_20"
    android:paddingBottom="@dimen/alg_common_20"
    android:paddingLeft="@dimen/alg_common_20"
    android:paddingRight="@dimen/alg_common_20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_new_push_icon"
        android:layout_width="@dimen/alg_common_100"
        android:layout_height="@dimen/alg_common_100"
        android:src="@drawable/alg_personal_mylist_arrow"

        />

    <TextView
        android:id="@+id/tv_item_new_push_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_new_push_icon"
        android:text="商品名称:"
        android:layout_marginLeft="@dimen/alg_common_20"
        android:singleLine="true"
        android:layout_marginTop="@dimen/alg_common_15"

        />


    <TextView
        android:id="@+id/tv_item_new_push_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_new_push_icon"
        android:layout_alignBottom="@id/iv_item_new_push_icon"
        android:layout_marginLeft="@dimen/alg_common_40"
        android:text="价格:"

        />

    <TextView

        android:id="@+id/tv_item_new_push_instant_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_alignBottom="@id/iv_item_new_push_icon"
        android:text="立即购买"
        android:background="@drawable/alg_common_shape_corner"
        android:paddingLeft="@dimen/alg_common_15"
        android:paddingRight="@dimen/alg_common_15"
        android:paddingTop="@dimen/alg_common_5"
        android:paddingBottom="@dimen/alg_common_5"
        />


</RelativeLayout>