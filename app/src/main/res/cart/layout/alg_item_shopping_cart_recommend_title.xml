<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_recommend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f4f6f9"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alg_common_50"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/alg_common_divider_width"
            android:layout_marginLeft="@dimen/alg_common_30"
            android:layout_marginRight="@dimen/alg_common_20"
            android:layout_weight="1"
            android:background="@color/alg_common_transparent"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alg_home_wine_recommend"/>

        <TextView
            android:id="@+id/tv_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/alg_common_5"
            android:text="推荐您喜欢"
            android:textColor="@color/alg_cart_hot_recommend_text"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/alg_common_divider_width"
            android:layout_marginLeft="@dimen/alg_common_20"
            android:layout_marginRight="@dimen/alg_common_30"
            android:layout_weight="1"
            android:background="@color/alg_common_transparent"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>